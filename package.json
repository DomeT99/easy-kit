  "devDependencies": {
    "@vitejs/plugin-vue": "^5.0.4",
    "@vue/test-utils": "^2.4.4",
    "typescript": "^5.4.2",
    "vite": "^5.1.5",
    "vitepress": "^1.0.0-alpha.74",
