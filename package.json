{
  "name": "easy-kit-component",
  "description": "Simple component kit for Vue 3",
  "version": "0.1.0",
  "author": "Domenico 'Dvalin' Tenace <domenicotenace99@gmail.com> (https://linktr.ee/domenicotenace)",
  "repository": {
    "type": "git",
    "url": "https://github.com/DomeT99/easy-kit.git",
    "directory": "https://github.com/DomeT99/easy-kit/blob/master/package.json"
  },
  "license": "MIT",
  "keywords": [
    "library",
    "vue",
    "javascript",
    "typescript",
    "component"
  ],
